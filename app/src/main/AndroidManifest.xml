<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mak.shop03">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app04"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_app04"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductFullInfo"></activity>
        <activity
            android:name=".BasketActivity"
            android:label="@string/basketact"
            android:noHistory="true" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/aboutact"
            android:noHistory="true" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settingsact"
            android:noHistory="true" />
        <activity
            android:name=".MyOrderActivity"
            android:label="@string/myorderact"
            android:noHistory="true" />
        <activity android:name=".SplashScreen"></activity>
    </application>

    <activity
        android:name=".SplashActivity"
        android:theme="@style/SplashTheme">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

</manifest>